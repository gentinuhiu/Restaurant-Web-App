@model Restaurant_Web_App.Models.Day

@{
    ViewBag.Title = "Day";
}

<h4>Edit Day</h4>
<p><i>24h format: 22.00, 01:30</i></p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        Start Time
        <div class="col-md-10">
            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        End Time
        <div class="col-md-10">
            @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Start Time 2
        <div class="col-md-10">
            @Html.EditorFor(model => model.StartTime2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StartTime2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        End Time 2
        <div class="col-md-10">
            @Html.EditorFor(model => model.EndTime2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EndTime2, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" /> &nbsp;
            @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-secondary" })

        </div>
    </div>
</div>
}
