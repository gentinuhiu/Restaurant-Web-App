@model IEnumerable<Restaurant_Web_App.Models.PizzaOrder>

@{
    ViewBag.Title = "Orders";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Order Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedSize)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pizza.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SelectedSize)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
