<!DOCTYPE html>
<html>
<style>


    html, body {
        height: 100%;
        margin: 0;
    }

    /* Use flexbox to push footer down */
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Full viewport height */
        //background-image: url("/UploadedDocuments/background.jpg");
    }

    /* Main content takes all available space */
    .content {
        flex: 1;
        padding: 20px; /* Optional padding to demonstrate space */
    }

    /*****/

    nav a{
        color: black;
        text-decoration: none;
    }
    nav a:hover{
        color: darkgray;
    }
    nav {
        //border-bottom: 1px solid rosybrown;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
    }
    footer {

    }
    #footer {
        height: fit-content;
        color: black !important;
        margin-top:20px;
        background-color: #f9f9f9;
        text-align: center;
        padding: 20px 20px 9px 20px;
    }
        #footer > div {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            //flex-wrap:wrap;
        }

    @@media screen and (max-width: 768px) {
        #footer > div {
            grid-template-columns: 1fr; /* Stack sections vertically */
        }
    }

    #footer > div p{
        margin:0;
        font-size:14px;
    }
    #footer i{
        font-size: 14px;
    }

</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://www.subitopizzakurier.ch/theme/SUBITO/favicon.ico">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>@ViewBag.Title - Subito Pizzakurier</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container">
            @Html.ActionLink("SUBITO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        <li style="text-decoration: underline;">@Html.ActionLink("Food Categories", "Index", "FoodCategories", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="text-decoration: underline;">@Html.ActionLink("Foods", "Index", "Foods", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="text-decoration: underline;">@Html.ActionLink("Ingredients", "Index", "Ingredients", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="text-decoration: underline;">@Html.ActionLink("No Ingredients", "Index", "NoIngredients", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="text-decoration: underline;">@Html.ActionLink("Options", "Index", "Options", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="text-decoration: underline;">@Html.ActionLink("Orders", "Index", "Carts", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="text-decoration: underline;">@Html.ActionLink("Finished Orders", "FinishedOrders", "Carts", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Cart", "ClientIndex", "Carts", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("My Orders", "AllClientOrders", "Carts", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content content">
        @RenderBody()

    </div>
    <footer id="footer">
        <div>
            <div>
                <p style="color:black !important;text-decoration:underline;">Contact</p>
                <p style="color:black !important;"><i style="color:black !important;"><i class="fas fa-phone" style="color:black; color:black !important;"></i> 081 322 20 20</i></p>
                <p style="color:black !important;"><i style="color:black !important;"><i class="fas fa-envelope" style="color:black; color:black !important;"></i> info@subitopizzakurier.ch</i></p>
                <br />
            </div>

            <div>
                <p style="color: black !important; text-decoration: underline;">Address</p>
                <p style="color:black !important;"><i style="color:black !important;"><i class="fas fa-map-marker-alt" style="color:black;"></i> Center Au, Kantonstrasse 24</i></p>
                <p style="color:black !important;"><i style="color:black !important;">7302 Landquart</i></p>
                <br />
            </div>

            <div>
                <p style="color: black !important; text-decoration: underline;">Legal</p>
                <a href="/UploadedDocuments/AGB_SUBITO.pdf" target="_blank" style="text-decoration:none;"><i style="color:black !important;">Click to view more</i></a>
                <br />
            </div>
        </div>
        <hr />
        <p style="text-align:center;font-size:14px;margin:0; color:black !important;">
            Subito Pizzakurrier 2024 &copy; &reg;
        </p>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
@section Scripts{
    @if(ViewBag.Title != "Home" && ViewBag.Title != "Account" && ViewBag.Title != "Register" && ViewBag.Title != "Log in")
    {
        <script>
            document.getElementsByTagName("body")[0].style.backgroundColor = "white";
        </script>
    }
}
