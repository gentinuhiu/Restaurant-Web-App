@model IEnumerable<Restaurant_Web_App.Models.NoIngredient>

@{
    ViewBag.Title = "Ingredients";
}

<h4>No Ingredients</h4>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
