@model Restaurant_Web_App.Models.FoodCategoryModel

@{
    ViewBag.Title = "Category";
}

<h4>Edit @Model.Name Category</h4>

@using (Html.BeginForm("Edit", "FoodCategories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
     <img src="@Url.Content(Model.imageUrl)" style="width:120px;" />
    <br />

    <div class="form-group">
        <label for="Name" class="control-label col-md-2">Image File</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.imageFile, new { type = "file", @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })

        </div>
    </div>
</div>
@Html.HiddenFor(m => m.imageUrl)
}


<script src="~/Scripts/jquery-3.x.x.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
